program z1710;
{$APPTYPE CONSOLE}var        h,u,d,f :integer;procedure work;var        up,de,cur       :extended;        i       :integer;begin        de:=u*f/100;        up:=u+de;        cur:=0;        i:=0;        repeat                inc(i);                up:=up-de;                if up<0 then                        up:=0;                cur:=cur+up;                if (cur<0)or(cur>h) then                        break;                cur:=cur-d;        until (cur<0)or(cur>h);        if cur>h then                writeln('success on day ',i)        else                writeln('failure on day ',i);end;begin        readln(h,u,d,f);        while h<>0 do        begin                work;                readln(h,u,d,f);        end;end.